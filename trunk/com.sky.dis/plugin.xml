<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="com.sky.dis.application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/sample.gif">
         <run
               class="com.sky.dis.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="DIS Perspective"
            class="com.sky.dis.Perspective"
            id="com.sky.dis.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.sky.dis.category.view.world"
            name="DIS World View">
      </category>
      <view
            allowMultiple="false"
            category="com.sky.dis.category.view.world"
            class="com.sky.dis.view.WorldView"
            icon="icons/sample.gif"
            id="com.sky.dis.view.WorldView"
            name="DIS World View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="com.sky.dis.cmd.startdis"
                  label="Start DIS"
                  style="push">
            </command>
            <command
                  commandId="com.sky.dis.cmd.stopdis"
                  label="Stop DIS"
                  style="push">
            </command>
            <separator
                  name="com.sky.dis.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
         <menu
               label="Window">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Show View..."
                  style="push">
            </command>
            <separator
                  name="com.sky.dis.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences..."
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.sky.dis.preferences.DisConfigurationPage"
            id="com.sky.dis.preferences.DisConfigurationPage"
            name="DIS Configuration">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.sky.dis.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.sky.dis.cmd.StartDisCmd"
            id="com.sky.dis.cmd.startdis"
            name="Start DIS">
      </command>
      <command
            defaultHandler="com.sky.dis.cmd.StopDisCmd"
            id="com.sky.dis.cmd.stopdis"
            name="Stop DIS">
      </command>
   </extension>

</plugin>
